<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }
        
        .card {
            width: 380px;
            background: white;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
        }
        
        .profile-header {
            padding: 30px;
            text-align: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        
        .avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: #e0e0e0;
            margin: 0 auto 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 40px;
            border: 4px solid rgba(255, 255, 255, 0.3);
        }
        
        .name {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 5px;
        }
        
        .github {
            font-size: 16px;
            opacity: 0.9;
        }
        
        .profile-body {
            padding: 30px;
        }
        
        .info-item {
            margin-bottom: 20px;
        }
        
        .label {
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #666;
            margin-bottom: 8px;
        }
        
        .value {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: #f5f7fa;
            padding: 12px 15px;
            border-radius: 12px;
            font-size: 14px;
            color: #333;
            word-break: break-all;
        }
        
        .copy-btn {
            background: none;
            border: none;
            color: #667eea;
            cursor: pointer;
            padding: 5px 10px;
            font-size: 14px;
            border-radius: 6px;
            transition: all 0.2s ease;
            margin-left: 10px;
            flex-shrink: 0;
        }
        
        .copy-btn:hover {
            background-color: #667eea;
            color: white;
        }
        
        .copy-btn.copied {
            background-color: #10b981;
            color: white;
        }
    </style>
</head>
<body>
    <div class="card">
        
        
        <div class="profile-body">
            <h3>Your profile</h3>
            
            <div class="info-item">
                <div class="label">GitHub display name</div>
                <div class="value">
                    <span id="name"><%= displayName %></span>
                </div>
            </div>
            
            <div class="info-item">
                <div class="label">GitHub username</div>
                <div class="value">
                    <span id="github"><%= name %></span>
                    
                </div>
            </div>
            
            <div class="info-item">
                <div class="label">API Key</div>
                <div class="value">
                    <span id="api-key"><%= uniqueKey %></span>
                    <button class="copy-btn" onclick="copyToClipboard('api-key')">
                        Copy
                    </button>
                </div>
                <form action="/resetkey" method="post">
                    <button type="submit" class="copy-btn">
                        Reset API key
                    </button>
                </form>
                <form action="/logout" method="get">
                    <button type="submit" class="copy-btn">
                        Log out
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Get initials from name
        function getInitials(name) {
            return name.split(' ').map(word => word[0]).join('');
        }
        
        // Set initials in avatar
        document.addEventListener('DOMContentLoaded', function() {
            const name = document.getElementById('name').innerText;
            document.getElementById('initials').innerText = getInitials(name);
        });
        
        // Copy to clipboard function
        function copyToClipboard(elementId) {
            const element = document.getElementById(elementId);
            const text = element.innerText;
            navigator.clipboard.writeText(text).then(() => {
                const button = element.nextElementSibling;
                button.innerText = 'Copied!';
                button.classList.add('copied');
                alert("API key copied to clipboard. Paste this to VS code extension.")
                setTimeout(() => {
                    button.innerText = 'Copy';
                    button.classList.remove('copied');
                }, 2000);
            });
        }
    </script>
</body>
</html>